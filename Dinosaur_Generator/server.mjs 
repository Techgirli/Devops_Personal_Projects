import 'dotenv/config';
import express from 'express';
import fetch from 'node-fetch';

const app = express();
const port = 3000;

app.use(express.static('public'));

app.listen(port, () => {
  console.log(`Server running at http://localhost:${port}`);
});

app.get('/dinoname', async (req, res) => {
  try {
    const response = await fetch(
      'https://dinosaur-api1.p.rapidapi.com/dinosaurs/hip/saurischia',
      {
        method: 'GET',
        headers: {
          'x-rapidapi-key': process.env.RAPIDAPI_KEY,
          'x-rapidapi-host': 'dinosaur-api1.p.rapidapi.com'
        }
      }
    );

    res.json(await response.json());
  } catch (err) {
    res.status(500).send('Error fetching dinosaur data');
  }
});

app.get('/dinoimage', async (req, res) => {
  try {
    const response = await fetch(
      'https://bing-image-search5.p.rapidapi.com/api/v1/bing/search/?query_url=https%3A%2F%2Fr.bing.com%2Frp%2FGJDmKr3_TS3Qpm6KEL9UKUQKUO4.jpg',
      {
        method: 'GET',
        headers: {
          'x-rapidapi-key': process.env.RAPIDAPI_KEY,
          'x-rapidapi-host': 'bing-image-search5.p.rapidapi.com'
        }
      }
    );

    const text = await response.text();
    try {
      res.json(JSON.parse(text));
    } catch {
      res.send(text);
    }
  } catch (err) {
    res.status(500).send('Error fetching dinosaur image');
  }
});
